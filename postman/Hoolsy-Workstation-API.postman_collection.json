          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const res = pm.response.json();",
                  "if (res.ok && res.uploadId) {",
                  "  pm.collectionVariables.set('uploadId', res.uploadId);",
                  "  console.log('Saved uploadId:', res.uploadId);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "x-ws-tenant",
