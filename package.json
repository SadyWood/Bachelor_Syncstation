{
  "name": "hoolsy-platforms",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "packageManager": "pnpm@9.12.0",
  "scripts": {
    "dev:ws": "pnpm -C apps/workstation-web dev",
    "dev:market": "pnpm -C apps/marketplace-web dev",
    "dev:api": "pnpm -C apps/api dev",
    "dev:timeline": "pnpm -C packages/timeline demo",
    "build": "pnpm -r --workspace-concurrency=1 run build",
    "lint": "pnpm -r run lint",
    "format": "pnpm -r run format",
    "typecheck": "pnpm -r run typecheck",
    "db:generate:users": "cross-env DB_NAME=users drizzle-kit generate --config=packages/databases/postgres/drizzle.config.cjs",
    "db:migrate:users": "cross-env DB_NAME=users drizzle-kit migrate --config=packages/databases/postgres/drizzle.config.cjs",
    "db:generate:workstation": "cross-env DB_NAME=workstation drizzle-kit generate --config=packages/databases/postgres/drizzle.config.cjs",
    "db:migrate:workstation": "cross-env DB_NAME=workstation drizzle-kit migrate --config=packages/databases/postgres/drizzle.config.cjs",
    "db:generate:marketplace": "cross-env DB_NAME=marketplace drizzle-kit generate --config=packages/databases/postgres/drizzle.config.cjs",
    "db:migrate:marketplace": "cross-env DB_NAME=marketplace drizzle-kit migrate --config=packages/databases/postgres/drizzle.config.cjs",
    "db:generate": "pnpm db:generate:users && pnpm db:generate:workstation && pnpm db:generate:marketplace",
    "db:migrate": "pnpm db:migrate:users && pnpm db:migrate:workstation && pnpm db:migrate:marketplace",
    "db:rebuild": "pnpm db:generate && pnpm db:migrate",
    "db:seed": "tsx packages/databases/postgres/src/scripts/seed-db.ts",
    "db:seed:demo": "tsx packages/databases/postgres/src/scripts/seed-demo.ts",
    "db:test": "tsx packages/databases/postgres/src/scripts/test-db.ts",
    "db:nuke": "tsx packages/databases/postgres/src/scripts/nuke-db.ts",
    "db:wipe": "tsx packages/databases/postgres/src/scripts/wipe-db.ts",
    "db:bootstrap": "tsx packages/databases/postgres/src/scripts/bootstrap-db.ts",
    "docker:up": "docker compose --env-file .env -f docker/docker-compose.yml up -d",
    "docker:down": "docker compose --env-file .env -f docker/docker-compose.yml down",
    "docker:reset": "docker compose --env-file .env -f docker/docker-compose.yml down -v && docker compose --env-file .env -f docker/docker-compose.yml up -d",
    "docker:logs": "docker compose --env-file .env -f docker/docker-compose.yml logs -f",
    "docker:ps": "docker compose --env-file .env -f docker/docker-compose.yml ps"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^5.6.1",
    "@types/node": "^22",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "drizzle-kit": "0.31.5",
    "eslint": "^9.37.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "eslint-plugin-react-refresh": "^0.4.23",
    "prettier": "^3.6.2",
    "tsx": "^4.19.1",
    "typescript": "~5.8.3"
  },
  "dependencies": {
    "drizzle-orm": "^0.44.5",
    "uuid": "^10.0.0"
  }
}