# ============================================
# API Configuration
# ============================================
PORT=3333
NODE_ENV=development

# ============================================
# Docker / PostgreSQL Configuration
# ============================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5433

# ============================================
# Database Configuration
# ============================================
# USERS_PUBLIC database (consumer users, carts, orders, favorites, addresses)
USERS_PUBLIC_DATABASE_URL=postgresql://consumer_user:consumer_password@localhost:5433/users_public

# CATALOG_DEMO database (subjects, products, content, timeline)
CATALOG_DEMO_DATABASE_URL=postgresql://consumer_user:consumer_password@localhost:5433/catalog_demo

# Admin URLs for running migrations (DO NOT use in API code)
USERS_PUBLIC_DATABASE_URL_ADMIN=postgresql://postgres:postgres@localhost:5433/users_public
CATALOG_DEMO_DATABASE_URL_ADMIN=postgresql://postgres:postgres@localhost:5433/catalog_demo

# ============================================
# JWT Secrets
# ============================================
# Generate with: openssl rand -base64 32
JWT_ACCESS_SECRET=your-access-secret-here
JWT_REFRESH_SECRET=your-refresh-secret-here

# Access token expiry (e.g., 15m, 1h, 7d)
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# CORS Configuration
# ============================================
# For mobile (Expo Go), use your local IP
# Find your IP with: ipconfig (Windows) or ifconfig (Mac/Linux)
CORS_ORIGIN=exp://192.168.1.100:8081
# Or use * for development (not recommended for production)
# CORS_ORIGIN=*

# ============================================
# File Upload (Optional)
# ============================================
# Max file size in bytes (e.g., 10MB)
MAX_FILE_SIZE=10485760
# Allowed file types (comma-separated)
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# ============================================
# Logging
# ============================================
LOG_LEVEL=debug
