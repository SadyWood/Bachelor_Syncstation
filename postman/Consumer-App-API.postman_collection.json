				{
					"name": "Sync Timeline (Fake Ultrasound)",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"// Auto-initialize syncCurrentTime if not set",
									"let currentTime = pm.collectionVariables.get('syncCurrentTime');",
									"if (!currentTime) {",
									"    pm.collectionVariables.set('syncCurrentTime', '0');",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/content/:id/timeline?currentTime={{syncCurrentTime}}&lookahead={{syncLookahead}}&includeActive=true",
							"host": ["{{baseUrl}}"],
							"path": ["api", "content", ":id", "timeline"],
							"query": [
								{
									"key": "currentTime",
									"value": "{{syncCurrentTime}}",
									"description": "Current playback position in seconds"
								},
								{
									"key": "lookahead",
									"value": "{{syncLookahead}}",
									"description": "Seconds ahead to fetch (default: 30)"
								},
								{
									"key": "includeActive",
									"value": "true",
									"description": "Include currently visible subjects"
								}
							],
							"variable": [
								{
									"key": "id",
									"value": "{{contentId}}"
								}
							]
						},
						"description": "FAKE ULTRASOUND TRIGGER\n\nSimulates what the app receives when ultrasound is detected.\n\nReturns:\n- Subjects visible NOW (isActive: true)\n- Subjects appearing within lookahead window\n- secondsUntilVisible: countdown for scheduling UI\n\nSet variables:\n- contentId: ID from Get All Content\n- syncCurrentTime: playback position (seconds)\n- syncLookahead: buffer window (default: 30)"
					},
					"response": []
				},
				{
					"name": "Sync Timeline (Upcoming Only)",
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/content/:id/timeline?currentTime={{syncCurrentTime}}&lookahead={{syncLookahead}}&includeActive=false",
							"host": ["{{baseUrl}}"],
							"path": ["api", "content", ":id", "timeline"],
							"query": [
								{
									"key": "currentTime",
									"value": "{{syncCurrentTime}}"
								},
								{
									"key": "lookahead",
									"value": "{{syncLookahead}}"
								},
								{
									"key": "includeActive",
									"value": "false",
									"description": "Only upcoming, not currently visible"
								}
							],
							"variable": [
								{
									"key": "id",
									"value": "{{contentId}}"
								}
							]
						},
						"description": "Pre-fetch only UPCOMING subjects (not currently visible). Useful for preloading product images."
					},
					"response": []
				}
			]
