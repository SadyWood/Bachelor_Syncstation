{
  "name": "@hoolsy/databases",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "build": "tsc -b",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "gen:users": "cross-env DB_NAME=users drizzle-kit generate --config ./drizzle.config.cjs",
    "migrate:users": "cross-env DB_NAME=users drizzle-kit migrate --config ./drizzle.config.cjs",
    "gen:workstation": "cross-env DB_NAME=workstation drizzle-kit generate --config ./drizzle.config.cjs",
    "migrate:workstation": "cross-env DB_NAME=workstation drizzle-kit migrate --config ./drizzle.config.cjs",
    "gen:marketplace": "cross-env DB_NAME=marketplace drizzle-kit generate --config ./drizzle.config.cjs",
    "migrate:marketplace": "cross-env DB_NAME=marketplace drizzle-kit migrate --config ./drizzle.config.cjs",
    "migrate:add-slug": "pnpm run build && node dist/scripts/migrate-add-slug.js",
    "seed:setup": "pnpm run build && node dist/seed/runners/run-setup.js",
    "seed:demo": "pnpm run build && node dist/seed/runners/run-demo.js"
  },
  "dependencies": {
    "@hk26/schema": "workspace:^",
    "bcryptjs": "^2.4.3",
    "drizzle-orm": "^0.44.5",
    "drizzle-zod": "^0.8.3",
    "pg": "^8.12.0",
    "uuid": "^10.0.0",
    "zod": "^3.23.8",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/pg": "^8.11.10",
    "@types/uuid": "^11.0.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "drizzle-kit": "0.24.2",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.3"
  }
}
